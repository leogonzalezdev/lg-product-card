{
  "version": "0.0.1",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/leogonzalezdev/lg-product-card.git"
  },
  "homepage": "https://leogonzalezdev.vercel.app",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "test:watch": "tsdx test --watch",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "lg-product-card",
  "author": "Leonel Gonzalez",
  "module": "dist/lg-product-card.esm.js",
  "size-limit": [
    {
      "path": "dist/lg-product-card.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/lg-product-card.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.26.3",
    "@rollup/plugin-image": "^3.0.3",
    "@size-limit/preset-small-lib": "^11.1.6",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@types/react-test-renderer": "^17.0.1",
    "babel-jest": "^29.7.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-test-renderer": "^19.0.0",
    "rollup-plugin-postcss": "^4.0.2",
    "size-limit": "^11.1.6",
    "tsdx": "^0.14.1",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2"
  },
  "keywords": [
    "react",
    "component",
    "product",
    "card",
    "leonel",
    "gonzalez"
  ],
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "identity-obj-proxy",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    }
  }
}
